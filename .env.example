# Configurações da Aplicação
APP_NAME=SICAR API
APP_VERSION=1.0.0
DEBUG=False

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/sicar_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Configurações SICAR
SICAR_DOWNLOAD_FOLDER=./downloads
SICAR_DRIVER=tesseract
SICAR_MAX_RETRIES=3
SICAR_RETRY_DELAY=5

# Agendamento
SCHEDULE_ENABLED=True
SCHEDULE_HOUR=2
SCHEDULE_MINUTE=0

# Estados para Download Automático
# Use "ALL" para todos os estados ou liste separados por vírgula (ex: "SP,RJ,MG")
AUTO_DOWNLOAD_STATES=SP

# Polígonos para Download Automático
# Opções: AREA_PROPERTY, APPS, NATIVE_VEGETATION, CONSOLIDATED_AREA, AREA_FALL, 
#         HYDROGRAPHY, RESTRICTED_USE, ADMINISTRATIVE_SERVICE, LEGAL_RESERVE
AUTO_DOWNLOAD_POLYGONS=APPS,LEGAL_RESERVE

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/sicar_api.log

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# Segurança
CORS_ORIGINS=["*"]
API_KEY=
